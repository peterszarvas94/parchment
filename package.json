{
  "name": "nanotext",
  "description": "nanotext - the simplest and smallest WYSIWYG text editor for web, with no dependencies",
  "author": "Peter Szarvas",
  "version": "0.1.3",
  "type": "module",
  "main": "./dist/nanotext.umd.js",
  "module": "./dist/nanotext.es.js",
  "exports": {
    ".": {
      "import": {
        "types": "./dist/nanotext.d.ts",
        "default": "./dist/nanotext.es.js"
      },
      "require": {
        "types": "./dist/nanotext.d.ts",
        "default": "./dist/nanotext.umd.js"
      }
    },
    "./dist/nanotext.css": "./dist/nanotext.css"
  },
  "files": [
    "dist",
    "src"
  ],
  "scripts": {
    "dev": "vite",
    "build": "vite build && cp src/nanotext.css dist/nanotext.css && npx tsc",
    "preview": "vite preview",
    "test": "vitest run",
    "test:watch": "vitest",
    "prepublishOnly": "npm run build",
    "publish:npm": "node scripts/publish.js",
    "release": "node scripts/release.js",
    "release:patch": "node scripts/release.js patch",
    "release:minor": "node scripts/release.js minor",
    "release:major": "node scripts/release.js major"
  },
  "keywords": [
    "text editor",
    "editor",
    "rich text",
    "wysiwyg",
    "contenteditable",
    "typescript",
    "types"
  ],
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/peterszarvas94/nanotext.git"
  },
  "bugs": {
    "url": "https://github.com/peterszarvas94/nanotext/issues"
  },
  "homepage": "https://github.com/peterszarvas94/nanotext#readme",
  "devDependencies": {
    "@types/node": "^25.0.3",
    "typescript": "^5.9.3",
    "vite": "^5.4.21",
    "vitest": "^4.0.16"
  }
}
